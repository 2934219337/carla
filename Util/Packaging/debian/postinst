#!/bin/sh
# postinst script for carla-simulator
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Adding carla PythonAPI to dist-packages (carla.pth)
for egg_file in /opt/carla-simulator/PythonAPI/carla/dist/*
do
  case "$egg_file" in
    *py3.*)
    PYTHON3_EGG=$(basename $egg_file) ;;
    *py2.*)
    PYTHON2_EGG=$(basename $egg_file) ;;
    *)
    ;;
  esac
done

if [ ! -z $PYTHON3_EGG ]
then
  PYTHON3_VERSION=$(python3 -c 'import sys; print(str(sys.version_info[0])+"."+str(sys.version_info[1]))') 2>/dev/null || :
  if [ ! -z $PYTHON3_VERSION ]
  then
    DISTDIR="/usr/lib/python3/dist-packages"
    echo "/opt/carla-simulator/PythonAPI/carla/dist/$PYTHON3_EGG" > "/$DISTDIR/carla.pth"
    echo "/opt/carla-simulator/PythonAPI/carla/" >> "$DISTDIR/carla.pth"
  fi
fi

if [ ! -z $PYTHON2_EGG ]
then
  PYTHON2_VERSION=$(python2 -c 'import sys; print(str(sys.version_info[0])+"."+str(sys.version_info[1]))') 2>/dev/null || :
  if [ ! -z $PYTHON2_VERSION ]
  then
    DISTDIR="/usr/lib/python$PYTHON2_VERSION/dist-packages"
    echo "/opt/carla-simulator/PythonAPI/carla/dist/$PYTHON2_EGG" > "$DISTDIR/carla.pth"
    echo "/opt/carla-simulator/PythonAPI/carla/" >> "$DISTDIR/carla.pth"
  fi
fi

chmod +x /opt/carla-simulator/CarlaUE4.sh

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
